[run]
source = .
omit = 
    */migrations/*
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */.venv/*
    */virtualenv/*
    */site-packages/*
    manage.py
    */wsgi.py
    */asgi.py
    */settings.py
    */admin.py
    */apps.py
branch = True
concurrency = multiprocessing
parallel = True

[report]
precision = 2
show_missing = True
skip_covered = False
skip_empty = True

exclude_lines =
    # Excluir líneas con pragma
    pragma: no cover

    # Excluir definiciones de métodos abstractos
    ^\s*@abstract
    ^\s*@abstractmethod

    # Excluir bloques de debugging / representaciones
    ^\s*def __repr__\(
    ^\s*def __str__\(

    # Excluir código de solo desarrollo
    ^\s*if settings\.DEBUG
    ^\s*if DEBUG

    # Excluir excepciones no implementadas
    ^\s*raise AssertionError
    ^\s*raise NotImplementedError

    # Excluir bloques if __name__ == '__main__'
    ^\s*if __name__ == '__main__':

    # Excluir type checking
    ^\s*if TYPE_CHECKING:
    ^\s*if typing\.TYPE_CHECKING:

    # Excluir pass statements aislados
    ^\s*pass\s*$

    # Excluir ellipsis
    \.\.\.

[html]
directory = htmlcov
title = Reporte de Cobertura - Django Project

[xml]
output = coverage.xml

[json]
output = coverage.json
pretty_print = True